<div class="content-lg container-fluid p-0">
  <div class="row two-col">
    <div class="col-md-6">
      <%= image_tag( "login.jpg", class: "left-img", alt: "Forget Password Page")%> 
    </div>
    <div class="col-md-6 right-col">
      <h2>Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: "btn btn-theme btn-theme-sm btn-base-bg text-uppercase" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
<div class="section-seperator"></div>

